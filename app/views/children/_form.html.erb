<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="error_section"></div>
      <%= form_for @child, remote: true, html: { style: "display:inline;" } do |f| %>
        <div class="modal-body">
          <ul class="errors"></ul>

          <div class="form-group">
            <%= f.label :name, class:"control-label" %>
            <%= f.text_field :name, class: "form-control txt_validate", required: true %>
          </div>
          <div class="form-group">
            <p>Add children to subject</p>
            <%= f.fields_for :students do |builder| %>
              <%= render 'student_fields', f: builder %>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.txt_validate').keyup(function() {
    if (this.value.match(/[^a-zA-Z0-9 ]/g)) {
        this.value = this.value.replace(/[^a-zA-Z0-9 ]/g, '');
        alert("Please only use letters for children's names. Symbols are unavailable")
    }
  });
</script>>