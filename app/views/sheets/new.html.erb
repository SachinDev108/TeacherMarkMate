<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <div class="well">
      <h2>Mark Book </h2>
      <%= form_for @sheet, html: { style: "display:inline;" } do |f| %>
      <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Name' %>
      </div>
      <div class="form-group">
        <%= f.label :subject %><br />
        <%= f.select :subject_id, options_for_select(current_teacher.subjects.collect { |c| [c.name, c.id]}), {:prompt => "Select Subject"},  { class: 'form-control'}%>
      </div>
      <div class="form-group student-list">
        <%#= render "children" %>
      </div>
      <div class = "">
        <div class="actions">
          <%= f.submit  "Save", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

