<div class="row custom-table-position">
  
  <div class="">
    <div class="well">
      <h2>New Objective </h2>
      <%= form_for @sheet, html: { style: "display:inline;" } do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <%= f.label :title %><br />
            <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Name', required: true %>
          </div>
          <div class="col-md-3">
            <%= f.label :date %><br />
            <%= f.date_field :date,   class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <%= f.label :subject %><br />
            <%= f.select :subject_id, options_for_select(current_teacher.subjects.collect { |c| [c.name, c.id]}), {:prompt => "Select Subject"},   class: 'form-control', required: true %>
          </div>
        </div>
        
      </div>
      <div class="form-group student-list">
        <%#= render "children" %>
      </div>
      <div class = "">
        <div class="actions">
          <%= f.submit  "Save", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="well table-responsive">
      <b>Objectives List</b>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Subject</th>
            <td>Action</td>
          </tr>
        </thead>
        <tbody id="objectives-list">
          <%= render "objectives_table" %>
        </tbody>
      </table>
    </div>

  </div>
</div>

