<!DOCTYPE html>
<html>
  <head>
    <title>MarkMate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application'%>
    <%= javascript_include_tag "application" %>
  </head>

  <body> 
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-left">
          <% if current_teacher %>
            <li><span class="nav-text">Welcome to <%= current_teacher.name.capitalize %></span></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_teacher %>
            <li><%= link_to "Perform Test", sheets_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Logout", destroy_teacher_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <% else %>
            <li><a href="/teachers/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="/teachers/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, class: "alert #{flash_class(name)}")  do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= msg %>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
