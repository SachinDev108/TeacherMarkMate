<!DOCTYPE html>
<html>
  <head>
    <title>MarkMate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application'%>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <% if current_teacher %>
      <div class="sidenav">
        <%= link_to "Dashboard", root_path, class: 'navbar-link teacher-markmate' %>
        <%= link_to "New Marksheet", new_sheet_path, :class => 'navbar-link'  %>
        <%= link_to "Marksheets", sheets_path, :class => 'navbar-link'  %>
        <%= link_to "Reports", sheets_path, :class => 'navbar-link'  %>
      </div>
      <nav class="navbar navbar-inverse marginleft13">
        <div class="container-fluid">
          <ul class="nav navbar-nav navbar-left">
            <li><span class="nav-text">Welcome <%= current_teacher.name.capitalize %></span></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Logout", destroy_teacher_session_path, method: :delete, :class => 'navbar-link' %></li>
          </ul>
        </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid"> 
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/teachers/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <li><a href="/teachers/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          </ul>
        </div>
      </nav>
    <% end %> 
    
    <div class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, class: "alert #{flash_class(name)} flash-message", style: (current_teacher ? 'margin-left: 13%' : ''))  do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= msg %>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

<script type="text/javascript">
  $(document).ready(function(){
    setTimeout(function(){
      $('.flash-message').fadeOut();
    }, 4000);
  })
</script>