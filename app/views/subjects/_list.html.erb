<div class="subject-index">
  <% if @subjects.present? %>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th class="width50">Name</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.name %></td>
              <td class="text-center"><%= link_to "Show", subject_path(subject), class: "btn btn-default" %> 
              <%= link_to "Edit", edit_subject_path(subject), remote: true, class: "btn btn-default" %>
              <%= link_to 'Delete', subject_path(subject), :method => :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-default" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
