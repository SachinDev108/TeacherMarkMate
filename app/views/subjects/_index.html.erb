<% @subjects.each do |subject| %>
  <tr>
    <td><%= subject.name %></td>
    <td><%= link_to "Edit", edit_subject_path(subject), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy',  { action: :destroy, id: subject.id }, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
  </tr>
<% end %>